<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:animateLayoutChanges="false"
    >

    <LinearLayout
        android:id="@+id/mainCardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="false"
        android:background="@drawable/email_card_background"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="9dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="9dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/senderCardTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/subjectCardTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/firstlineCardTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/timeDateCardTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/submenuCardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alwaysDrawnWithCache="false"
        android:animateLayoutChanges="false"
        android:animationCache="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible">

        <Button
            android:id="@+id/move_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            android:text="Move"
            android:textAllCaps="true"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/rule_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            android:text="Rule"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:visibility="gone"/>

        <Button
            android:id="@+id/reply_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            android:text="Reply"
            android:textAllCaps="true"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/todo_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="To Do"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:visibility="gone"/>

    </LinearLayout>

    <Button
        android:id="@+id/undo_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:text="Undo"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:visibility="gone"
        />

</FrameLayout>